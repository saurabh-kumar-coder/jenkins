pipeline {
    agent any
    parameters {
        string(name: 'Build', description: 'it is for building application', defaultValue: 'Building')
        string(name: 'Test', description: 'it is for Testing application', defaultValue: 'Testing')
        string(name: 'Deploy', description: 'it is for deploying application', defaultValue: 'Deploying')
        string(name: 'Branch', description: 'branch name', defaultValue: 'main')
    }
    stages {
        stage('checkout') {
            steps {
                /* groovylint-disable-next-line GStringExpressionWithinString */
                echo 'this is for branch checkout, the data should be come from new branch'
                git branch: "${ params.Branch }", url: 'https://github.com/saurabh-kumar-coder/jenkins.git'
                echo('checkout')
            }
        }
        stage('Build') {
            steps {
                sh "echo hello ${params.Build}"
            }
        }
        stage('Test') {
            steps {
                sh "echo hello ${params.Test}"
            }
        }
        stage('Deploy') {
            steps {
                sh "echo hello ${params.Deploy}"
            }
        }
    }
}
